{
  "name": "starlight",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@prisma/client": "^7.4.2",
      "prisma-json-types-generator": "^4.1.1",
      "@prisma/adapter-pg": "^7.4.2",
      "tsdown": "^0.21.0-beta.2",
      "@orpc/server": "^1.13.5",
      "@orpc/openapi": "^1.13.5",
      "@orpc/client": "^1.13.5",
      "@orpc/zod": "^1.13.5",
      "zod": "^4.3.6",
      "prisma": "^7.4.2",
      "grammy": "^1.40.1",
      "ioredis": "^5.10.0",
      "ky": "^1.14.3"
    }
  },
  "scripts": {
    "lint": "turbo lint",
    "format": "turbo format",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "prestart:server": "bun run db:generate && bun run db:deploy",
    "start:server": "turbo -F server start",
    "start:web": "turbo -F web start",
    "db:deploy": "turbo -F @starlight/utils db:deploy",
    "db:generate": "turbo -F @starlight/utils db:generate",
    "db:migrate": "turbo -F @starlight/utils db:migrate",
    "queue:classify": "turbo -F server queue:classify",
    "queue:embeddings": "turbo -F server queue:embeddings"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "1.3.9",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "tsdown": "^0.21.0-beta.2",
    "turbo": "^2.8.12",
    "ultracite": "7.2.4"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.3.0"
  }
}
