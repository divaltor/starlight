{
  "name": "starlight",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "dev:frontend": "bun run --elide-lines=0 --filter=./frontend dev",
    "dev:backend": "bun run --elide-lines=0 --filter=./backend start",
    "db:generate": "bun run --filter=./backend db:generate",
    "db:migrate": "bun run --filter=./backend db:migrate",
    "start:backend": "bun run --filter=./backend db:migrate && bun run --filter=./backend start",
    "build:frontend": "bun run --elide-lines=0 --filter=./frontend build"
  },
  "workspaces": {
    "packages": [
      "backend",
      "frontend"
    ],
    "catalog": {
      "zod": "^3.25.28",
      "ioredis": "^5.6.1",
      "grammy": "^1.36.3"
    }
  }
}