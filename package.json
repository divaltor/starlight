{
  "name": "starlight",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@prisma/client": "^7.4.1",
      "prisma-json-types-generator": "^4.1.1",
      "@prisma/adapter-pg": "^7.4.1",
      "tsdown": "^0.20.3",
      "@orpc/server": "^1.13.5",
      "@orpc/openapi": "^1.13.5",
      "@orpc/client": "^1.13.5",
      "@orpc/zod": "^1.13.5",
      "zod": "^4.3.6",
      "prisma": "^7.4.1",
      "grammy": "^1.40.0",
      "ioredis": "^5.9.3"
    }
  },
  "scripts": {
    "lint": "turbo lint",
    "format": "turbo format",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "postinstall": "lefthook install",
    "prestart:server": "bun run db:generate && bun run db:push",
    "start:server": "turbo -F server start",
    "start:web": "turbo -F web start",
    "db:push": "turbo -F @starlight/utils db:push",
    "db:generate": "turbo -F @starlight/utils db:generate",
    "db:migrate": "turbo -F @starlight/utils db:migrate",
    "queue:classify": "turbo -F server queue:classify",
    "queue:embeddings": "turbo -F server queue:embeddings"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "1.3.9",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.11",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.3.0"
  }
}
